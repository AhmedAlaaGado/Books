@model Books.ViewModels.BookViewModel
@{
    ViewData["Title"] = "Delete Book";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this Book?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Author</dt>
        <dd class="col-sm-10">@Model.AuthorName</dd>

        <dt class="col-sm-2">Publisher</dt>
        <dd class="col-sm-10">@Model.PublisherName</dd>

        <dt class="col-sm-2">Genre</dt>
        <dd class="col-sm-10">@Model.Genre</dd>

        <dt class="col-sm-2">Published Year</dt>
        <dd class="col-sm-10">@Model.PublishedYear</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
